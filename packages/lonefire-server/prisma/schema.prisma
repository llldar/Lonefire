datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Blog {
  id           String   @id @default(uuid())
  name         String?
  visitorCount Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model UserRole {
  id    String @id @default(uuid())
  name  String
  users User[]
}

model User {
  id          String     @id @default(uuid())
  name        String?
  username    String     @unique
  password    String
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  posts       Post[]
  role        UserRole[]
}

model Post {
  id           String     @id @default(uuid())
  authorId     String?
  content      String?
  published    Boolean    @default(false)
  status       PostStatus
  title        String
  headerImgUrl String?
  author       User?      @relation(fields: [authorId], references: [id])
  likeCount    Int        @default(0)
  viewCount    Int        @default(0)
  scoreAverge  Int        @default(0)
  minuteRead   Int?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  tags         Tag[]
}

enum PostStatus {
  DRAFT
  PUBLISHED
}

model Tag {
  id   String @id @default(uuid())
  name String
  post Post[]
}
