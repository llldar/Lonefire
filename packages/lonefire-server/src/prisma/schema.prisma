generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = "postgresql://nathaniel:nathaniel@localhost:5432/lonefire?schema=public"
}

model User {
    id          String    @id @default(uuid())
    name        String?
    description String
    articles    Article[]
}

model Article {
    id           String    @id @default(uuid())
    authorId     String?
    content      String?
    published    Boolean   @default(false)
    title        String
    headerImgUrl String?
    author       User?     @relation(fields: [authorId], references: [id])
    createdAt    DateTime  @default(now())
    updatedAt    DateTime? @updatedAt
    likeCount    Int       @default(0)
    viewCount    Int       @default(0)
    scoreAverge  Int       @default(0)
    minuteRead   Int?
}
