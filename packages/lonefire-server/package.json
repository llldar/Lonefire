{
  "name": "@lonefire/server",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./build",
    "build": "yarn -s clean && tsc --outDir ./build",
    "dev": "cross-env DEBUG=lonefire:* ts-node-dev --exit-child --tree-kill --respawn --transpile-only src/app.ts",
    "db:new-migration": "prisma migrate dev --preview-feature --name",
    "db:migrate": "prisma migrate dev --preview-feature",
    "generate": "yarn -s generate:prisma && yarn -s generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "NODE_ENV=development ts-node --transpile-only src/schema",
    "db:seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@devoxa/prisma-relay-cursor-connection": "^1.1.1",
    "@koa/cors": "^3.1.0",
    "@lonefire/shared": "^1.0.0",
    "@prisma/client": "2.18.0",
    "@types/koa-graphql": "^0.8.4",
    "argon2": "^0.27.1",
    "debug": "^4.3.1",
    "grant": "^5.4.10",
    "graphql": "^15.5.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-playground-middleware-koa": "^1.6.21",
    "graphql-scalars": "^1.9.0",
    "jwt-decode": "^3.1.2",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-graphql": "^0.8.0",
    "koa-graphql-batch": "^1.1.0",
    "koa-router": "^10.0.0",
    "koa-send": "^5.0.1",
    "koa-session": "^6.1.0",
    "koa-static": "^5.0.0",
    "nexus": "^1.0.0",
    "nexus-plugin-prisma": "^0.32.0",
    "node-fetch": "^2.6.1",
    "ts-pattern": "^2.4.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/faker": "^5.1.7",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/koa": "^2.13.1",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-graphql": "^0.8.4",
    "@types/koa-router": "^7.4.1",
    "@types/koa-send": "^4.1.2",
    "@types/koa-session": "^5.10.3",
    "@types/koa-static": "^4.0.1",
    "@types/koa__cors": "^3.0.2",
    "@types/node": "^14.14.33",
    "@types/node-fetch": "^2.5.8",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "faker": "^5.4.0",
    "prisma": "2.18.0",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.3"
  }
}