{
  "name": "@vlepo/server",
  "version": "1.0.4",
  "private": true,
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run generate",
    "build": "yarn clean && tsc --outDir ./build && cp -R prisma package.json ./build",
    "clean": "rm -rf ./build",
    "db:clean": "DEBUG=* ts-node --transpile-only prisma/seed.ts -c",
    "db:migrate": "prisma migrate dev",
    "db:new-migration": "prisma migrate dev --name",
    "db:push": "prisma db push",
    "db:reset": "prisma migrate reset",
    "db:seed": "DEBUG=* ts-node --transpile-only prisma/seed.ts -s",
    "dev": "NODE_ENV=development DEBUG=* ts-node-dev -r dotenv/config --exit-child --tree-kill --respawn --transpile-only src/app.ts",
    "generate": "yarn -s generate:prisma && yarn -s generate:nexus",
    "generate:nexus": "NODE_ENV=development ts-node --transpile-only src/graphql",
    "generate:prisma": "prisma generate",
    "lint": "eslint src --ext .ts,.tsx",
    "spellcheck": "cspell src/**/*.{ts,tsx}",
    "start": "NODE_ENV=production DEBUG=* pm2 start app.js --name vlepo-server",
    "ts-node": "ts-node --transpile-only",
    "typecheck": "tsc --noEmit",
    "zip": "rm -rf ../../artifact && mkdir -p ../../artifact && zip -r ../../artifact/vlepo-server.zip build"
  },
  "dependencies": {
    "@devoxa/prisma-relay-cursor-connection": "1.1.1",
    "@koa/cors": "3.1.0",
    "@prisma/client": "2.22.1",
    "@vlepo/shared": "latest",
    "algoliasearch": "4.9.1",
    "argon2": "0.27.2",
    "crypto-random-string": "3.3.1",
    "date-fns": "2.21.3",
    "debug": "4.3.1",
    "grant": "5.4.13",
    "graphql": "15.5.0",
    "graphql-depth-limit": "1.1.0",
    "graphql-playground-middleware-koa": "1.6.21",
    "graphql-scalars": "1.9.3",
    "graphql-upload": "12.0.0",
    "image-size": "1.0.0",
    "knex": "0.95.4",
    "koa": "2.13.1",
    "koa-bodyparser": "4.3.0",
    "koa-graphql": "0.8.0",
    "koa-graphql-batch": "1.1.0",
    "koa-mount": "4.0.0",
    "koa-router": "10.0.0",
    "koa-send": "5.0.1",
    "koa-session": "6.2.0",
    "koa-static": "5.0.0",
    "next-mdx-remote": "3.0.1",
    "nexus": "1.0.0",
    "nexus-plugin-prisma": "0.34.1",
    "node-fetch": "2.6.1",
    "node-vibrant": "3.2.1-alpha.1",
    "pg": "8.6.0",
    "reading-time": "1.3.0",
    "remark": "13.0.0",
    "remark-mdx": "1.6.22",
    "remark-mdx-to-plain-text": "3.0.0",
    "ts-pattern": "3.1.4",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@types/debug": "4.1.5",
    "@types/faker": "5.5.5",
    "@types/graphql-depth-limit": "1.1.2",
    "@types/graphql-upload": "8.0.4",
    "@types/koa": "2.13.1",
    "@types/koa-bodyparser": "4.3.0",
    "@types/koa-graphql": "0.8.4",
    "@types/koa-mount": "4.0.0",
    "@types/koa-router": "7.4.2",
    "@types/koa-send": "4.1.2",
    "@types/koa-session": "5.10.3",
    "@types/koa-static": "4.0.1",
    "@types/koa__cors": "3.0.2",
    "@types/node": "15.0.2",
    "@types/node-fetch": "2.5.10",
    "@types/uuid": "8.3.0",
    "dotenv": "9.0.2",
    "esbuild": "0.11.20",
    "eslint": "7.26.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.23.2",
    "eslint-plugin-react-hooks": "4.2.0",
    "faker": "5.5.3",
    "meow": "9.0.0",
    "prisma": "2.22.1",
    "ts-node": "9.1.1",
    "ts-node-dev": "1.1.6",
    "typescript": "4.2.4"
  }
}
